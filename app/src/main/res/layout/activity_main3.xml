<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4C8D7"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/textView"
        android:layout_width="635dp"
        android:layout_height="37dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="30dp"
        android:text="Cookie Sweeper"
        android:textColor="#6C6767"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="632dp"
        android:layout_height="61dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="25dp"
        android:text="When playing the game, click on areas of the game to search for a cookie. If you find one, great! Otherwise you'll start off a scan to count how many cookiesare in that row or column. You can also click a cookie to have it scan its rows and column for other hidden cookies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="635dp"
        android:layout_height="33dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="28dp"
        android:text="Author"
        android:textColor="#6C6767"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="635dp"
        android:layout_height="19dp"
        android:text="Written by Saikat Saha and Gurkirat Singh Arora, students of SFU"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="639dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="26dp"
        android:text="Resources"
        android:textColor="#6C6767"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="638dp"
        android:layout_height="79dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="42dp"
        android:text="Activity Backround References: ice_cream_parlour from https://www.pinterest.ca/pin/free-vector--452541462560191933/    Button Icon References: ice_cream from https://www.subpng.com/png-rhogtb/  Sound from https://mixkit.co/free-sound-effects/click/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>